{% extends 'base.html.twig' %}

{% block title %}Příspěvek{% endblock %}

{% block content %}

<style>
 .list-header, .list-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem;
}
.list-header {
    font-weight: bold;
}

.list-cell {
    flex: 1;
    padding: 0.5rem;
}

/* Assuming .list-header and .list-row are direct children of .list */
.list > .list-header {
    font-weight: bold;
    background-color: #f0f0f0;
}

.list > .list-row:nth-child(odd) {
    background-color: #f9f9f9;
}

/* Responsive design adjustments */
@media (max-width: 768px) {
    .list-header, .list-row {
        flex-direction: column;
    }
}
</style>

    <h1>Příspěvek</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prispevek.id }}</td>
            </tr>
            <tr>
                <th>Datum vytvoření</th>
                <td>{{ prispevek.DatumVytvoreni ? prispevek.DatumVytvoreni|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tématika</th>
                <td>{{ prispevek.Tematika }}</td>
            </tr>
            <tr>
                <th>Jméno autora</th>
                <td>{{ prispevek.autor }}</td>
            </tr>
             <tr>
            <th>Vydání</th>
            <td>
                {% if vydani %}
                    {{ vydani.id }}: {{ vydani.jmeno }}
                {% else %}
                    Žádné vydání
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_prispevek_index') }}">Zpět</a>

    <a href="{{ path('app_prispevek_edit', {'id': prispevek.id}) }}">Editovat</a>

    {{ include('prispevek/_delete_form.html.twig') }}
{% endblock %}
