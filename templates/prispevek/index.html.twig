{% extends 'base.html.twig' %}

{% block title %}Všechny příspěvky{% endblock %}

{% block content %}
    <h1>Všechny příspěvky</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datum vytvoření</th>
                <th>Tématika</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
        {% for prispevek in prispeveks %}
            <tr>
                <td>{{ prispevek.id }}</td>
                <td>{{ prispevek.DatumVytvoreni ? prispevek.DatumVytvoreni|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ prispevek.Tematika }}</td>
                <td>
                    <a href="{{ path('app_prispevek_show', {'id': prispevek.id}) }}">Zobrazit detaily</a>
                    <a href="{{ path('app_prispevek_edit', {'id': prispevek.id}) }}">Editovat</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Záznamy nenalezeny</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_prispevek_new') }}">Nový příspěvek</a>
{% endblock %}
