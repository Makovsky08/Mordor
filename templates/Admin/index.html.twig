{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
 .list-header, .list-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem;
}
.list-header {
    font-weight: bold;
}

.list-cell {
    flex: 1;
    padding: 0.5rem;
}

/* Assuming .list-header and .list-row are direct children of .list */
.list > .list-header {
    font-weight: bold;
    background-color: #f0f0f0;
}

.list > .list-row:nth-child(odd) {
    background-color: #f9f9f9;
}

/* Responsive design adjustments */
@media (max-width: 768px) {
    .list-header, .list-row {
        flex-direction: column;
    }
}
</style>
{% endblock %}

{% block content %}
<div class="content-area">
    <h2>Admin Dashboard</h2>
    <h3><b>Přehled osob:</b></h3>
    
    <!-- Header Row -->
    <div class="list-header">
        <div class="list-cell">Id</div>
        <div class="list-cell">Role</div>
        <div class="list-cell">Jméno</div>
        <div class="list-cell">Příjmení</div>
        <div class="list-cell">Informace</div>
    </div>
    {% for osoba in osobas %}
    <div class="list-row">
        <div class="list-cell">{{ osoba.id }}</div>
        <div class="list-cell">
            {% for role in osoba.roles %}
                {{ role }}
                {% if not loop.last %}, {% endif %}
            {% endfor %}
        </div>
        <div class="list-cell">{{ osoba.jmeno }}</div>
        <div class="list-cell">{{ osoba.prijmeni }}</div>
        <div class="list-cell"><a href="{{ path('app_osoba_show', {'id': osoba.id}) }}">Více informací</a></div>
    </div>
    {% else %}
    <div class="list-row">
        <div class="list-cell">No records found</div>
    </div>
    {% endfor %}
    
    <!-- Additional Actions -->
    {% if is_granted('ROLE_ADMIN') %}
    <div class="action-links">
        <a href="{{ path('app_osoba_new') }}">Přidat novou osobu</a>
    </div>
    {% endif %}
</div>
{% endblock %}
