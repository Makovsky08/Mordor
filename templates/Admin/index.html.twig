{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
 .admin-list-header, .admin-list-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem;
}

.admin-list-cell {
    flex: 1; /* Adjust as needed */
    padding: 0.5rem; /* Adjust as needed */
    /* Add borders, background, etc., as necessary */
}

/* Assuming .admin-list-header and .admin-list-row are direct children of .admin-list */
.admin-list > .admin-list-header {
    font-weight: bold;
    background-color: #f0f0f0;
}

.admin-list > .admin-list-row:nth-child(odd) {
    background-color: #f9f9f9;
}

/* Add responsive design as needed */
@media (max-width: 768px) {
    .admin-list-header, .admin-list-row {
        flex-direction: column;
    }
}
</style>
{% endblock %}

{% block content %}
<div class="admin-content">
    <h2>Admin dashboard</h2>
    <h3><b>Přehled uživatelů:</b></h3>

    <!-- Header Row -->
    <div class="admin-list-header">
        <div class="admin-list-cell">Id</div>
        <div class="admin-list-cell">Role</div>
        <div class="admin-list-cell">Jméno</div>
        <div class="admin-list-cell">Příjmení</div>
        <div class="admin-list-cell">Informace</div>
    </div>

    <!-- User Rows -->
    {% for user in users %}
    <div class="admin-list-row">
        <div class="admin-list-cell">{{ user.id }}</div>
        <div class="admin-list-cell">{{ user.id }}</div>
        <div class="admin-list-cell">{{ user.name }}</div>
        <div class="admin-list-cell">{{ user.surname }}</div>
        <div class="admin-list-cell">
            <a href="{{ path('app_user_show', {'id': user.id}) }}">Více informací</a>
        </div>
    </div>
    {% else %}
    <div class="admin-list-row">
        <div class="admin-list-cell">Záznam nenalezen</div>
    </div>
    {% endfor %}

    <!-- Additional Actions -->
    {% if is_granted('ROLE_ADMIN') %}
    <div class="admin-actions">
        <a href="{{ path('app_user_new') }}">Přidat nového uživatele</a>
    </div>
    {% endif %}
</div>
{% endblock %}
