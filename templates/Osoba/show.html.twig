{% extends 'base.html.twig' %}

{% block title %}Osoba{% endblock %}

{% block content %}
    <div class="container mt-4 edit-container">
        <h1>Osoba</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ osoba.id }}</td>
                </tr>
                <tr>
                    <th>Jmeno</th>
                    <td>{{ osoba.jmeno }}</td>
                </tr>
                <tr>
                    <th>Prijmeni</th>
                    <td>{{ osoba.prijmeni }}</td>
                </tr>
                <tr>
                    <th>Datum_narozeni</th>
                    <td>{{ osoba.datumNarozeni ? osoba.datumNarozeni|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ osoba.email }}</td>
                </tr>
                {% if is_granted('ROLE_ADMIN') %}
                    <tr>
                        <th>Heslo</th>
                    <td>{{ osoba.heslo }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>
                            {% for role in osoba.roles %}
                                {{ role }}
                                {% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                {% endif %}

            </tbody>
        </table>

        <a class="btn btn-secondary mt-3" href="{{ path('app_osoba_index') }}">Back to List</a>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-warning mt-3" href="{{ path('app_osoba_edit', {'id': osoba.id}) }}">Edit</a>

            {{ include('osoba/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
